<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EquipmentDistribution.ViewModels"
        xmlns:m="using:EquipmentDistribution.Models"
        xmlns:c="using:EquipmentDistribution.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="1000" Height="750"
        x:Class="EquipmentDistribution.Views.ModelCalculatorWindow"
        x:DataType="vm:MainWindowViewModel"
        WindowStartupLocation="CenterOwner"
        Title="Калькулятор модели">

    <Window.Resources>
        <c:IndexerConverter x:Key="IndexerConverter"/>
    </Window.Resources>
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,5,Auto,5,Auto,5,Auto,5,Auto,5,*,5,Auto" ColumnDefinitions="103, 5, *" Margin="10,5">
        <TextBlock Text="Таблица нагрузки" Grid.ColumnSpan="3"/>
        <DataGrid Grid.Row="2" Grid.ColumnSpan="3" ItemsSource="{Binding LearningHoursInfo.Classes}" 
                  x:Name="HoursDataGrid"
                  CellEditEnded="HoursDataGrid_OnCellEditEnded"
                  CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Класс" IsReadOnly="True" Binding="{Binding Year}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal">
            <Button Content="Сохранить таблицу нагрузки" Click="HoursSaveButton_OnClick"/>
            <TextBlock x:Name="HoursSaveStatus" Margin="5"/>
        </StackPanel>
        
        <Grid Grid.ColumnSpan="3" Grid.Row="6" ColumnDefinitions="Auto,*,Auto,*">
            <TextBlock Grid.Column="0" Text="Тип здания:" Margin="0,5,5,5"/>
            <ComboBox Grid.Column="1" SelectedItem="{Binding SelectedSchoolType}"
                      ItemsSource="{Binding SchoolTypes}"/>
            <TextBlock Grid.Column="2" Text="Модель:" Margin="5"/>
            <ComboBox Grid.Column="3" SelectedItem="{Binding SelectedSchoolModel}"
                      ItemsSource="{Binding AvailableModels}"
                      SelectionChanged="SelectingItemsControl_OnSelectionChanged"/>
        </Grid>
        
        <TextBlock Grid.Column="0" Grid.Row="8" Text="Кол-во классов"/>
        <TextBlock Grid.Column="2" Grid.Row="8" Text="Кол-во кабинетов"/>
        
        <DataGrid Grid.Row="10" ItemsSource="{Binding SchoolModelOverride.Classes}"
                  x:Name="ClassesCountDataGrid"
                  CellEditEnding="ClassesCountDataGrid_OnCellEditEnding"
                  CellEditEnded="ClassesCountDataGrid_OnCellEditEnded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Класс" IsReadOnly="True" Binding="{Binding Key}" Width="50"/>
                <DataGridTextColumn Header="Кол-во" IsReadOnly="False" Binding="{Binding Value, Mode=OneWay}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <DataGrid Grid.Row="10" Grid.Column="2" ItemsSource="{Binding ClassroomCalculationResult}" 
                  CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Кабинет" IsReadOnly="True" Binding="{Binding Classroom}"/>
                <DataGridTextColumn Header="Начальное кол-во" IsReadOnly="True" Binding="{Binding OriginalCount}"/>
                <DataGridTextColumn Header="Рассчитанное кол-во" IsReadOnly="True" Binding="{Binding CalculatedCount}"/>
                <DataGridTextColumn Header="Изменение" IsReadOnly="True" Binding="{Binding Difference}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Grid Grid.Row="12" Grid.ColumnSpan="3" ColumnDefinitions="Auto,Auto,10,Auto,Auto,*,Auto,Auto,10,Auto">
            <TextBlock Grid.Column="0" Text="Предельное кол-во кабинетов:" Margin="0,5"/>
            <TextBlock Grid.Column="1" Text="{Binding OriginalClassroomCount}" Margin="0,5"/>
            <TextBlock Grid.Column="3" Text="Рассчитанное кол-во кабинетов:" Margin="0,5"/>
            <TextBlock Grid.Column="4" Text="{Binding CalculatedClassroomCount}" Margin="0,5"/>
            <TextBlock Grid.Column="6" Text="НЕДОСТАТОЧНО КАБИНЕТОВ" Foreground="Red" Margin="5" IsVisible="{Binding ClassroomCalculationFailed}"/>
            <TextBlock Grid.Column="7" x:Name="SaveModelStatus" Margin="5"/>
            <Button Grid.Column="9" Content="Сохранить модель" Click="SaveModelButton_OnClick" IsEnabled="{Binding !ClassroomCalculationFailed}"/>
        </Grid>
    </Grid>

</Window>
