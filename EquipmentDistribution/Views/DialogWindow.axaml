<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EquipmentDistribution.Views.DialogWindow"
        x:Name="Root"
        SizeToContent="WidthAndHeight"
        MinWidth="300" MinHeight="70"
        MaxWidth="900" MaxHeight="700"
        WindowStartupLocation="CenterOwner"
        Title="Информация">
    <Grid RowDefinitions="*,Auto,Auto" Margin="5">
        <TextBlock TextWrapping="Wrap" x:Name="Message"/>
        <TextBox Grid.Row="1" TextWrapping="Wrap" x:Name="Input" Margin="0,5"/>
        <Button Grid.Row="2" Content="OK" Command="{Binding #Root.Close}" HorizontalAlignment="Right"/>
    </Grid>
</Window>
